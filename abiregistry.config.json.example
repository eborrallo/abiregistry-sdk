      "MyToken",
      "MyNFT",
      "MyVault",
      "MyGovernance"
    ]

    // Note: Versions are auto-incremented (1, 2, 3, ...)
    // Use --label flag to add custom labels: npx abiregistry foundry --label "v1.0-audit"
